{
  "name": "hello-node",
  "version": "1.0.0",
  "description": "A hello world project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/puthnith/hello-node.git"
  },
  "keywords": [
    "hello",
    "node"
  ],
  "author": "Puthnith Var",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/puthnith/hello-node/issues"
  },
  "homepage": "https://github.com/puthnith/hello-node#readme",
  "scripts": {
    "migrate": "./node_modules/knex/bin/cli.js migrate:latest",
    "migrate:make": "./node_modules/.bin/knex migrate:make",
    "seed": "./node_modules/knex/bin/cli.js seed:run",
    "seed:make": "./node_modules/.bin/knex seed:make",
    "lint": "eslint '*/**/*.ts' --quiet --fix",
    "debug": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "debug:nodemon": "nodemon",
    "build": "tsc",
    "start": "node ./build/server.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "tslog": "^2.6.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.22",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "no-console": "error",
      "simple-import-sort/sort": "error",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 120
  }
}
