{
  "name": "hello-node",
  "version": "1.0.0",
  "description": "A hello world project",
  "author": "Puthnith Var",
  "keywords": [
    "hello",
    "node",
    "typescript",
    "eslint",
    "prettier"
  ],
  "repository": "github:puthnith/hello-node",
  "bugs": "https://github.com/puthnith/hello-node/issues",
  "homepage": "https://github.com/puthnith/hello-node#readme",
  "license": "MIT",
  "scripts": {
    "migrate": "./node_modules/knex/bin/cli.js migrate:latest",
    "migrate:make": "./node_modules/.bin/knex migrate:make",
    "seed": "./node_modules/knex/bin/cli.js seed:run",
    "seed:make": "./node_modules/.bin/knex seed:make",
    "lint": "eslint '*/**/*.ts' --quiet --fix",
    "debug": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "debug:nodemon": "nodemon",
    "build": "tsc",
    "start": "node ./build/server.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "tslog": "^2.6.1"
  },
  "devDependencies": {
    "@puthnith/eslint-config-dust": "^1.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.22",
    "eslint": "^7.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "eslintConfig": {
    "extends": "@puthnith/dust",
    "rules": {
      "no-console": "error",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
